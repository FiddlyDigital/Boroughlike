{
  "compilerOptions": {    
    "esModuleInterop": false,
    "experimentalDecorators": true,            
    "lib": [
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "out-tsc",
    "rootDir": "./",                
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
  },
  "include": [
    "./src/**/*.ts"
  ]
}